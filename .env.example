# ============================================================
# Triskel API - Variables de Entorno (Ejemplo)
# ============================================================
# Copia este archivo a .env y rellena con tus valores reales

# ==================== Configuración de la Aplicación ====================
APP_NAME=Triskel-API
DEBUG=False
PORT=8000

# CORS Origins (separados por comas)
CORS_ORIGINS=http://localhost:3000,https://tu-dominio.com

# ==================== Firebase ====================
# Opción 1: Ruta al archivo de credenciales JSON (local)
FIREBASE_CREDENTIALS_PATH=config/firebase-credentials.json

# Opción 2: Credenciales JSON como string (Railway/Producción)
# FIREBASE_CREDENTIALS_JSON={"type":"service_account","project_id":"tu-proyecto",...}

# ==================== Base de Datos (MariaDB - Futuro) ====================
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=triskel_db
# DB_USER=triskel_user
# DB_PASSWORD=tu_password_seguro

# ==================== Claves Secretas ====================
# SECRET_KEY=tu_clave_secreta_super_segura_aqui
# API_KEY=tu_api_key_aqui
# JWT_SECRET=tu_jwt_secret_aqui

# ==================== Configuración de Logs ====================
# LOG_LEVEL=INFO
# LOG_FORMAT=json

# ==================== Railway/Producción ====================
# RAILWAY_ENVIRONMENT=production
# RAILWAY_STATIC_URL=https://tu-app.railway.app
